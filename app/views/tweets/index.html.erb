<div class="body">
  <div class="container">
    <div class="row">
      <table class="table table-hover">
        <thead>
          <tr>
            <td>ニックネーム</td>
          </tr>
          <tr>
            <td>投稿日時</td>
          </tr>
          <tr>
            <td>詳細</td>
          </tr>
          <tr>
            <td></td>
          </tr>
        </thead>
        <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= link_to tweet.user.username, user_path(tweet.user), method: :get %></td>
          </tr>
          <tr>
            <td><%= tweet.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          </tr>
          <tr>
            <td><%= link_to '詳細', tweet_path(tweet), method: :get %></td>
          </tr>
          <% if user_signed_in? && current_user.id == tweet.user_id %>
            <tr>
              <td><%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %></td>
            </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>
      <%= link_to 'ツイートを投稿する', new_tweet_path, {class: 'btn btn-primary withripple' }%>
      <%= link_to '自分のツイート一覧へ', show_tweets_path, {class: 'btn btn-primary withripple' }%>
    </div>
  </div>
</div>