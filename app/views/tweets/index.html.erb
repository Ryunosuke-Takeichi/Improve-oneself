<div class="tweets_container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2>TimeLine</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tweets.each do |tweet| %>
            <tr>
              <td>
                <%= link_to user_path(tweet.user) do %>
                  <%= attachment_image_tag(tweet.user, :profile_image, :fill, 40, 40, fallback: "logo.png", size:'40x40', format: 'jpeg', class: "img-circle profile-img") %>
                <% end %>
              </td>
              <td>
                <%= link_to user_path(tweet.user) do %>
                  <%= tweet.user.name %>
                <% end %>
              </td>
              <td><%= link_to tweet.body, tweet_path(tweet.id) %></td>
              <td><%= render partial: 'favorites/favorite', locals: { tweet: tweet} %></td>
              <td><p>コメント<%= tweet.comments.count %></p></td>
              <td><%= tweet.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
              <td></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @tweets %>
  </div>
</div>