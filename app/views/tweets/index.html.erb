<div class="container">
  <div class="row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @tweets.each do |tweet| %>
          <tr>
            <td>
              <%= link_to user_path(tweet.user) do %>
               <%= attachment_image_tag(tweet.user, :profile_image, :fill, 50, 50) %>
              <% end %>
            </td>
            <td><%=link_to tweet.body, tweet_path(tweet.id) %></td>
            <td><%= render partial: 'favorites/favorite', locals: { tweet: tweet} %></td>
            <td></td>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>