<div class="container">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
		  <td>
		    <%= link_to user_path(@tweet.user) do %>
			  <%= attachment_image_tag(@tweet.user, :profile_image, :fill, 100, 100, ) %><br>
				<%= @tweet.user.name %>
			<% end %>
		  </td>
		  <td><%= link_to @tweet.body, tweet_path(@tweet) %></td>
		  <td></td>
		  <td></td>
		  <% if @user.id == current_user.id %>
		    <td><%= link_to "Destroy", tweet_path(@tweet), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_tweet_#{@tweet.id}" %></td>
	      <% end %>
	    </tr>
      </thead>
  </div>
</div>
