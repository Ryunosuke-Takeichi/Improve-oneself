<div class="tweet_show_container">
  <div class="row">
    <div class="col">
	  <table class="table">
	  	<tr>
	  	  <td>
	  	    <%= link_to user_path(@tweet.user) do %>
	  		  <%= attachment_image_tag(@tweet.user, :profile_image, :fill, 50, 50,　format: 'jpeg', class: "img-circle profile-img" ) %><br>
	  		  <%= @tweet.user.name %>
	  		 <% end %>
	  	  </td>
	  	  <td><%= @tweet.body%></td>
	  	  <% if @user.id == current_user.id %>
	  	    <td><%= link_to "削除", tweet_path(@tweet), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_tweet_#{@tweet.id}" %></td></td>
	  	  <% end %>
	  	</tr>
	  </table>
	  <div class="row">
	    <div id="comments_area">
	      <div class="col-xs-5">
	        <%= render partial: 'comments/index', locals: { comments: @comments } %>
	      </div>
	      <div class="col-xs-7">
	      	<% if user_signed_in? %>
             <div class="comment-create">
          <%= render partial: 'comments/form', locals: { comment: @comment, tweet: @tweet } %>
        </div>
      <% end %>
	      </div>
   
    </div>
	    </div>	
	  </div>
  </div>
</div>


	 
	 