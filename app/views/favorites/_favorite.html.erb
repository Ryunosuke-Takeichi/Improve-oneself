<% if user_signed_in? %>
  <% if tweet.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
    <%= link_to tweet_favorites_path(tweet.id), method: :delete, remote: true do %>
      <i class="fas fa-heart"></i>
    <% end %>
  <% else %>
    <%= link_to tweet_favorites_path(tweet.id), method: :post, remote: true do %>
      <i class="far fa-heart"></i>
    <% end %>
  <% end %>
  <%= tweet.favorites.count %>
<% end %>