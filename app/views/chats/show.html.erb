<div class="container">
  <div class="chart">
    <div class="row">
      <h2 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>"><%= @user.name %> さんとの会話</h2>
　　　<table class="message table">
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
            <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
          <% if chat.user_id == current_user.id %>
            <tbody>
            <tr>
                <th>
                  <p style="text-align: left;"><%= chat.message %></p>
                </th>
              <th></th>
            </tr>
            </tbody>
            <% else %>
            <tbody>
              <tr>
                <th></th>
                <th>
                  <p style="text-align: right;"><%= chat.message %></p>
                </th>
              </tr>
            </tbody>
          <% end %>
        <% end %>
      </table>
      <div class="message">
        <%= form_with model: @chat do |f| %>
          <%= f.text_field :message, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
          <%= f.hidden_field :room_id %>
          <%= f.submit "投稿",class: 'form-submit'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
