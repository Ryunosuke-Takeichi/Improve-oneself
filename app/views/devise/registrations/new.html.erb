<div class="container">
  <div class="sign_up">
    <h2 class="form text-center">SIGN UP</h2>
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  
    <div class="field">
      <%= f.label :name, "ニックネーム" ,class: "form" %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "山田太郎", autocomplete: "name" %>
    </div>
  
    <div class="field">
      <%= f.label :height, "身長" ,class: "form" %><br />
      <%= f.text_field :height, autofocus: true, placeholder: "***cm", autocomplete: "height" %>
    </div>
  
     <div class="weight">
      <%= f.label :weight, "体重" ,class: "form" %><br />
      <%= f.text_field :weight, autofocus: true, placeholder: "***kg", autocomplete: "weight" %>
    </div>

    <div class="field">
      <%= f.label :email, "メール" ,class: "form"%><br />
      <%= f.email_field :email, autofocus: true, placeholder: "sample@email",autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, "パスワード",class: "form" %>
      <% if @minimum_password_length %>
        <em >(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: "******",autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "パスワード（確認パスワード）" ,class: "form" %><br />
      <%= f.password_field :password_confirmation, placeholder: "******", autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
