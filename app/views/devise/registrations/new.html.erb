<h2>新規登録</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
   <div class="field">
    <%= f.label :name, "ニックネーム" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  
   <div class="field">
    <%= f.label :height, "身長" %><br />
    <%= f.text_field :height, autofocus: true, autocomplete: "height" %>
  </div>
  
   <div class="weight">
    <%= f.label :weight, "体重" %><br />
    <%= f.text_field :weight, autofocus: true, autocomplete: "weight" %>
  </div>

  <div class="field">
    <%= f.label :email, "メール" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード（確認パスワード）" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
