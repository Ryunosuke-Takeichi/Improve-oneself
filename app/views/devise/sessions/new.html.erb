<div class="container">
  <div class="row">
    <div class="login">
      <h2 class="form text-center">LOG IN</h2>
  　     <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
  　       <% @user.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        
          <div class="field">
            <%= f.label :email, "メール" ,class: "form"%><br />
            <%= f.email_field :email, placeholder: "sample@email", autofocus: true, autocomplete: "email" %>
          </div>
  
          <div class="field">
            <%= f.label :password, "パスワード" ,class: "form"%><br />
            <%= f.password_field :password, placeholder: "******",autocomplete: "current-password" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me ,class: "form"%>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

    </div>
  </div>
</div>