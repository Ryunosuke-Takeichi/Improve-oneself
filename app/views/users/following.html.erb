<div class="container">
  <div class="row">
    <h1>Folloers User</h1>
    <% if @users.empty? %>
        <span>ユーザーはいません</span>
    <% else %>
     <table class="table table-hover table-inverse">
      <tbody>
        <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50) %></td>
              <td><%= user.name %></td>
              <td><p>フォロー数:<%= user.followings.count %></td>
              <td><p>フォロワー数:<%= user.followers.count %></td>
              <td><%= link_to "Show", user_path(user), class: "user_#{user.id}" %></td>
            </tr>
        <% end %>
      </tbody>
     </table>
    <% end %>
  </div>
</div>